{% for message in thread.messages %}
    <div class="msg msgUser">
        <div class="profile  sm-img-post">
            <a href="{{ url("zgh_fe.user_profile.index", {"id": message.sender.id }) }}" class="pull-left img-circle ">
                <img alt="" src="{{ message.sender.profilePhoto ?  asset(message.sender.profilePhoto.getThumbWebPath) : ("ROLE_FACEBOOK" in message.sender.roles ? 'https://graph.facebook.com/'~message.sender.facebookId~'/picture?width=125&height=125' : "#") }}"
                     class="media-object img-responsive">
            </a>
            <h5><a href="{{ url("zgh_fe.user_profile.index", {"id": message.sender.id }) }}">{{ message.sender.fullname }}</a></h5>
        </div>
        <div class="clearfix"></div>
        <div class="pull-right time">{{ message.createdAt|date("d M Y - h:i A") }}</div>
        <p class="img-rounded">
            <span></span>
            {{ message.body|nl2br|converturls }}
        </p>

    </div>
{% endfor %}