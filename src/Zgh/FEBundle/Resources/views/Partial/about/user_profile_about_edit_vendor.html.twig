<table class="table table-hover">
    <thead>
    <tr>
        <th colspan="2">Categories
            {% if app.user and about.user.id == app.user.id %}
                <a href="{{ url("zgh_fe.vendor_categories.get") }}" class="pull-right">
                    <span class="glyphicon glyphicon-edit top"></span>
                </a>
            {% endif %}
        </th>
    </tr>
    </thead>
    <tbody>
    <tr>
        <td>
            {% for category in about.categories %}
                {{ category.name }}
                {% if loop.index != about.categories|length %},{% endif %}
            {% endfor %}
        </td>
    </tr>
    </tbody>
</table>
{{ form_start(form, {"action":  url("zgh_fe.about.post_vendor_edit", {"id": app.user.getVendorInfo.getId } ) } ) }}
    <table class="table table-hover">
