{% form_theme form with ['ThraceFormBundle:Form:fields.html.twig'] %}
{{ form_start(form, {"action": url("zgh_fe.branches.post_edit", {"id": user.id , "branch_id": branch.id })}) }}
    <div class="panel panel-default editBranch">
        <div class="panel-heading">
            <div class="btnPanel">
                    <a href="#" class="save_edit"> <span title=""
                                       data-original-title="Save"
                                       data-placement="top"
                                       data-toggle="tooltip"
                                       class="glyphicon  glyphicon-check tooltip pull-right top">
                                       </span></a>
                    <a class="cancel_edit" href="{{ url("zgh_fe.branches.inner", {"id": user.id, "branch_id": branch.id}) }}"> <span title=""
                                       data-placement="top"
                                       data-toggle="tooltip"
                                       class="glyphicon glyphicon-arrow-left tooltip pull-right top"
                                       data-original-title="Cancel"></span>
                    </a>
            </div>
        </div>

        <ul class="list-group">
            <li class="form-group"><label>Address</label>{{ form_widget(form.address, {"attr": { "class":"form-control", "placeholder": "Address" } }) }} {{ form_errors(form.address) }}</li>
            <li class="form-group"><label>City</label>{{ form_widget(form.city, {"attr": { "class":"branchCity" } }) }} {{ form_errors(form.city) }}</li>
            <li class="form-group"><label>Phone</label>{{ form_widget(form.phone, {"attr": { "class":"form-control","placeholder": "Phone" } }) }} {{ form_errors(form.phone) }}</li>
            <li class="form-group"><label>Mobile</label>{{ form_widget(form.mobile, {"attr": { "class":"form-control","placeholder": "Mobile" } }) }} {{ form_errors(form.mobile) }}</li>
            <li class="form-group"><label>Email</label>{{ form_widget(form.email, {"attr": { "class":"form-control","placeholder": "Email" } }) }} {{ form_errors(form.email) }}</li>
        </ul>

    </div>
{{ form_rest(form) }}
{{ form_end(form) }}
