<div class="posts_wrapper">
    {% for post in posts %}
        <div class="post margin" data-post_id="{{ post.id }}">
            {% if app.user and post.user_id == app.user.id %}
                <button data-target="#deletePost_{{ post.id }}" data-toggle="modal" type="submit"
                        class="row  btn delete-post pull-right"><span
                            class="glyphicon glyphicon-remove pull-right"></span></button>
                <div id="deletePost_{{ post.id }}" aria-hidden="true" aria-labelledby="myModalLabel" role="dialog"
                     tabindex="-1" class="modal fade in">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header modalHeader">
                                <button type="button" class="close modalClose" data-dismiss="modal"
                                        aria-hidden="true">&times;</button>
                                <h4 class="modal-title" id="myModalLabel">Delete Post</h4>
                            </div>
                            <div class="modal-body">
                                <p>Are you sure you want to delete this?</p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-wide modalClose btn-default"
                                        data-dismiss="modal"
                                        aria-hidden="true">Cancel
                                </button>
                                <form class="btnForm" action="{{ url("zgh_fe.post.delete", {"id": post.id}) }}"
                                      method="post">
                                    <button type="submit" class="btn btn-wide btn-primary post-delete-btn">Delete</button>
                                </form>
                            </div>
                        </div>
                        <!-- /.modal-content -->
                    </div>
                    <!-- /.modal-dialog -->
                </div>
            {% endif %}
            <div class="header-post">
                <div class="data-reacted col-xs-8 pull-left">
                    <div class="profile sm-img-post">
                        <a href="{{ url("zgh_fe.user_profile.index", {"id": post.user_id } ) }}"
                           class="pull-left img-circle">
                            <img alt=""
                                 src=""
                                 width="639" class="img-responsive  media-object">
                        </a>

                        <h3>
                            <a href="{{ url("zgh_fe.user_profile.index", {"id": post.user_id } ) }}">{{ post.fullname }} </a>
                        </h3>
                        <a href="{{ url("zgh_fe.post.display", {"id": post.user_id, "post_id": post.id}) }}"><span
                                    class="date-time">{{ post.createdAt|date("D d M Y - h:i A") }}</span></a>

                    </div>

                </div>

                <div class="clearfix"></div>
            </div>
            <!--End header-post-->

        </div>

    {% endfor %}
</div>
