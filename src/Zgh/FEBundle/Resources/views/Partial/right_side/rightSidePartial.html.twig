{% for entry in result %}
    <div class="row media profile fr-suggest ">
        <div class="col-sm-4">
            <a class="pull-left {{ "ROLE_VENDOR" in entry.roles ? "img-rounded" : "img-circle" }}" href="#">
                <img class="media-object "
                     src="{{ "ROLE_FACEBOOK" in entry.roles ? 'https://graph.facebook.com/'~entry.facebookId~'/picture?width=125&height=125' : asset(entry.profilePhoto.getThumbWebPath) }}"
                     alt="">
            </a>
        </div>
        <div class="col-sm-8">
            <h3><a href="{{ url("zgh_fe.user_profile.index", {"id": entry.id}) }}">{{ entry.fullname }}</a></h3>
            {{ renderFollow(entry, "btn-sm") }}
            <a href="{{ url("zgh_fe.user_profile.connections_partial", {"id": entry.id}) }}" class=" {{ "ROLE_VENDOR" in entry.roles ? "" : (entry.userInfo.gender == 0 ? "boy" : "girl") }}"> <span
                        class="glyphicon glyphicon-user"></span> <span class="followerStats">{{ getApprovedFollowings(entry)|length }}</span></a>
        </div>
    </div>
    {% if loop.index != result|length %}
        <hr>
    {% endif %}
{% endfor %}
