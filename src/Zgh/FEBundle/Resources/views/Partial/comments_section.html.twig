    <div class="row margin-bottom">
        <a class="girl pull-right"> <span class="glyphicon glyphicon-comment"></span> <span class="comments_count">{{ entity.comments|length }}</span> </a>
        <a class="girl dataReactid openLikes pull-right iconHeart" data-entity_id="{{ entity.id }}" data-entity_type="{{ entity.getObjectType }}" data-toggle="modal" data-target="#like_{{ entity.id }}" href="#"> <span class="glyphicon glyphicon-heart"></span> <span class="likes_count">{{ entity.likes|length }}</span></a>
        <div id="like_{{ entity.id }}" class="modal fade">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header modalHeader">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h4 class="modal-title">People Who Like This</h4>
                    </div>
                    <div class="modal-body likes_wrapper" data-loader="{{ asset("bundles/zghfe/img/page-preloader.GIF") }}">

                    </div>
                </div><!-- /.modal-content -->
            </div><!-- /.modal-dialog -->
        </div><!-- /.modal -->

        <span class="glyphicon "></span>
    </div>

    {% for comment in entity.comments %}
        <div class="row postComment margin-sm ">
            {% if comment.user.id == app.user.id %}
                <button data-target="#deleteComment_{{ comment.id }}" data-toggle="modal" type="submit" class="row btn delete-post pull-right"><span class="glyphicon glyphicon-remove pull-right"></span></button>
                <div id="deleteComment_{{ comment.id }}" aria-hidden="true" aria-labelledby="myModalLabel" role="dialog" tabindex="-1" class="modal fade in">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header modalHeader">
                                <button type="button" class="close modalClose" data-dismiss="modal" aria-hidden="true">&times;</button>
                                <h4 class="modal-title" id="myModalLabel">Delete Comment</h4>
                            </div>
                            <div class="modal-body">
                                <p>Are you sure you want to delete this?</p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-wide modalClose btn-default" data-dismiss="modal" aria-hidden="true">Cancel</button>
                                <form class="btnForm comment_delete_form" action="{{ url("zgh_fe.comment.delete", {"id": comment.id}) }}" method="post">
                                    <button type="submit" class="btn btn-wide btn-primary comment-delete">Delete</button>
                                </form>
                            </div>
                        </div><!-- /.modal-content -->
                    </div><!-- /.modal-dialog -->
                </div>
            {% endif %}
            <div class="data-reacted  pull-left">
                <div class="profile sm-img-post">
                    <a href="#" class="pull-left img-circle">
                        <img alt="" src="{{ "ROLE_FACEBOOK" in comment.user.roles ? 'https://graph.facebook.com/'~comment.user.facebookId~'/picture' : asset(comment.user.profilePhoto.getThumbWebPath) }}" class="img-responsive comment_author_pp  media-object">
                    </a>
                </div>
                <a class="ZaghrutaTitle" href="{{ url("zgh_fe.user_profile.index", {"id": comment.user.id } ) }}"><strong class="comment_author">{{ comment.user.fullname }}</strong></a>

            </div>

            <div class="content-post">

                <p>
                    {{ comment.content }}
                </p>
                <span class="date-time comment_time">{{ comment.createdAt|date("D - h:m A") }}</span>

                <div class="clearfix"></div>
            </div>


        </div>
    {% endfor %}
    <div class="row">
        <form action="{{ url("zgh_fe.comment.new", {"id": entity.id, "entity_type": entity.getObjectType}) }}" method="post">
            <textarea name="comment_content" placeholder="Post comment.." class="form-control animated" rows="1"></textarea>
            <button class="btn btn-primary btn-wide btn-comment pull-right" disabled="disabled" type="submit">
                Comment
            </button>
        </form>
    </div>
    <div class="clearfix"></div>
