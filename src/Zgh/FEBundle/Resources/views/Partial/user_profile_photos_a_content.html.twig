<div class="albumCont">
    {% for album in albums %}
    <div class="col-md-3 col-xs-6">
        <div class="thumbnail">
            <a href="#" data-url="{{ url("zgh_fe.photos_partial_albums_photos_content", {"id": album.user.id, "album_id": album.id }) }}" class="load_images">
                <img alt="Responsive image" class="img-responsive"
                              src="{{ album.photos|length > 0 ? asset(album.photos.first.getThumbWebPath) : asset("bundles/zghfe/img/thumb.jpg") }}">
            </a>

                <div class="caption">
                    <h4>{{ album.name }} <span class="badge pull-right">{{ album.photos|length }}</span></h4>

                    <p class="date">{{ album.createdAt|date("d M Y") }}</p>
                </div>
        </div>
    </div>
    {% endfor %}
</div>
