{% endblock body %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        $(document).ready(function () {

            $(".login_form").validate({
                rules: {
                    _username: {
                        required: true,
                        email: true
                    },
                    _password: "required"
                },
                messages: {
                    _username: {
                        required: "Email is required",
                        email: "Wrong E-mail Format"
                    },
                    _password: "Password is required"
                },
                submitHandler: function(form){
                    form.submit();
                }
            });

            $(".iconGroup a").mouseenter(function () {
                var secName = $(this).attr('class');
                $('#' + secName + '').siblings().hide();
                $('#' + secName + '').fadeIn(100);

            });

            $(".reset_btn").on("click", function (e) {
                e.preventDefault();
                var form = $(e.target).closest("form");
                $(form).validate({
                    rules: {
                        username: {
                            required: true,
                            email: true
                        }
                    },
                    messages: {
                        username: {
                            required: "Email is required"
                        }
                    }
                });
                if($(form).valid()) {
                    $(e.target).attr("disabled", "disabled").val("Please wait");
                    $.ajax({
                        type: "POST",
                        url: $(form).attr("action"),
                        data: form.serialize(),
                        success: function (data) {
                            $(e.target).parent().siblings("div.reset_request_result").html("<p>" + data.message + "</p>");
                            $(e.target).removeAttr("disabled").val("Reset Password");
                        }
                    })
                }
            });
        });
    </script>
{% endblock javascripts %}