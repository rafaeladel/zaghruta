{% extends "@ZghFE/layout_security.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}

{% block content %}
    <div class="mainContent">
        <div>
            <div class="loginBG img-responsive visible-lg"></div>
            <div class="iconGroup img-responsive visible-lg">
                <div style="position: relative">
                    <a href="#" class="sprite-iconPlug"></a>
                    <a href="#" class="sprite-iconChair"></a>
                    <a href="#" class="sprite-iconCalendar"></a>
                    <a href="#" class="sprite-iconHome"></a>
                    <a href="#" class="sprite-iconGirl"></a>
                    <a href="#" class="sprite-iconAccessories"></a>
                    <a href="#" class="sprite-iconFashion"></a>
                    <a href="#" class="sprite-iconPhotographers"></a>
                    <a href="#" class="sprite-iconHotels"></a>
                    <a href="#" class="sprite-iconBouquet"></a>
                    <a href="#" class="sprite-iconCar"></a>
                    <a href="#" class="sprite-iconHoneymoon"></a>
                    <a href="#" class="sprite-iconCakes"></a>
                    <a href="#" class="sprite-iconMusic"></a>
                </div>
            </div>
        </div>
        {% block innerContent %}
            <div class="BGlogin img-responsive visible-lg" style="display: none !important;"></div>
            <section class="container">
                <div class="control-group">&nbsp;</div>
                <div class="row">
                    <div class="signBox  col-md-6">

                        <ul class="nav nav-tabs nav-login" id="loginTabs">
                            <li class="active"><a href="">Reset Password</a></li>
                        </ul>
                        <div class="tab-content">
                            <div id="register_user" class="tab-pane active">
                                {% block fos_user_content %}
                                    {% include "FOSUserBundle:Resetting:reset_content.html.twig" %}
                                {% endblock fos_user_content %}

                            </div>

                        </div>
                    </div>
                </div>
                <div class="clearfix"></div>
            </section>
        {% endblock innerContent %}
    </div>
{% endblock content %}


<!-- JavaScript plugins (requires jQuery) -->
<script src="{{ asset("bundles/zghfe/js/jquery-1.10.2.min.js") }}"></script>

<!-- Include all compiled plugins (below), or include individual files as needed -->
<script src="{{ asset("bundles/zghfe/js/bootstrap.js") }}"></script>

<!-- Optionally enable responsive features in IE8 -->
<script src="{{ asset("bundles/zghfe/js/respond.js") }}"></script>

<script src="{{ asset("bundles/zghfe/js/custom.js") }}"></script>
<script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
<script src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>
<script>
    $(document).ready(function () {
        $(".iconGroup a").mouseenter(function () {
            var secName = $(this).attr('class');
            $('#' + secName + '').siblings().hide();
            $('#' + secName + '').fadeIn(100);

        });
    });
</script>
<div id="theH" style=""></div>
</body>
</html>
