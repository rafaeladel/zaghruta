<div class="row {{ not is_popup ? "" : "PopupPhotoContent" }}">
    <div class="col-md-12 resizePhoto contentImg">
        <img src="{{ photo.getWebPath | imagine_filter("my_photos") }}" class="img-responsive" width="720" rel="photo" alt="">
        <div class="deteilsPhoto">  
           {% if app.user and photo.user.id == app.user.id %}
                <a href="#" data-target="#deletePhoto_{{ photo.id }}" data-toggle="modal" class="btn-delete pull-right"><i class="glyphicon glyphicon-trash"></i> Delete</a>
                <div id="deletePhoto_{{ photo.id }}" aria-hidden="true" aria-labelledby="myModalLabel" role="dialog" tabindex="-1" class="modal fade in">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header modalHeader">
                                <button type="button" class="close modalClose" data-dismiss="modal" aria-hidden="true">&times;</button>
                                <h4 class="modal-title" id="myModalLabel">Delete Photo</h4>
                            </div>
                            <div class="modal-body">
                                <p>Are you sure you want to delete this?</p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-wide modalClose btn-default" data-dismiss="modal" aria-hidden="true">Cancel</button>
                                <form class="btnForm" action="{{ url("zgh_fe.photos.photo.delete", {"id": photo.id}) }}" method="post">
                                    <button type="submit" class="btn btn-wide btn-primary">Delete</button>
                                </form>
                            </div>
                        </div><!-- /.modal-content -->
                    </div><!-- /.modal-dialog -->
                </div>
            {% endif %}
            <a class="pull-left nameAlbum" href="{{ url("zgh_fe.user_profile.albums_partial", {"id": photo.user.id}) }}"> <h4>{{ photo.album.name }}</h4></a>
        </div>
    </div>
</div>
<div class="row photoContent">
    {% if is_popup == false %}
    <div class="row margin-bottom margin-top">
        {% set photos = photo.user.photos %}
        {% set next_id = nextId(photos, photo) %}
        {% set prev_id = prevId(photos, photo) %}

        {% if prev_id != null %}
            <a href="{{ url("zgh_fe.photos.photo.content", {"id": photo.user.id, "photo_id": prev_id }) }}"
               class="pull-left margin-left exp-Arrow"><span class="glyphicon glyphicon-chevron-left"></span> Previous</a>
        {% endif %}
        {% if next_id != null %}
            <a href="{{ url("zgh_fe.photos.photo.content", {"id": photo.user.id, "photo_id": next_id }) }}"
               class="pull-right margin-right exp-Arrow">Next <span class="glyphicon glyphicon-chevron-right"></span></a>
        {% endif %}
    </div>
    {% endif %}
    <div class="row PhotoCaption">
        <div class="col-md-12">
            <p>{{ photo.caption|converturls }}
            </p>
        </div>
    </div>
    <div class="row PhotoCaption">
        <div class="col-md-12">
            
        </div>
    </div>
    <div class="row  actionPhoto">
        {% if app.user %}
        <div class="col-sm-4 col-xs-12 col-md-4 pull-right buttonWrapper">
            <form class="btnForm pull-right" action="{{ url("zgh_fe.like.post", {"id": photo.id, "entity_type": photo.getObjectType }) }}" method="post">
                <button type="submit" data-placement="top" data-toggle="tooltip" title="Like" class="btn tooltip btn-circle doLike {{ checkLike(app.user, photo) ? "btn-danger" : "likeBtn" }}">
                    <span class="glyphicon glyphicon-heart"></span>
                    {#<span><span class="likes_count"> {{ photo.likes|length }}people like this  </span> </span>#}
                </button>
            </form>
        </div>
        {% endif %}
        <div class="col-md-4 col-sm-4">
            <p class="photodate">
                {{ photo.createdAt|date }}
            </p>
        </div>
    </div>
    <div class="col-md-12 popupPost {{ app.user.id == photo.user.id ? "" : "result2" }} ">
        {{ include("@ZghFE/Partial/common/comments_section.html.twig", { 'entity': photo }) }}
    </div>


</div>
