{% extends "@ZghFE/layout.html.twig" %}
{% block stylesheets %}
    {{ parent() }}
{% endblock stylesheets %}
{% block content %}

    <div class="container">
        {% block leftContent %}
        <div class="row">
            <div class="row search-Results">
                <div class="srh-Res-Heading col-md-4 pull-left">
                    <span class="icon-Res icon-Res-Head img-circle"></span>
                    <h1>Results for <span>{{ app.request.get("q") }}</span></h1>
                </div>  <!----------------End  srh-Res-Heading -------------->

                <div class="filtration col-md-7 pull-right">

                    <div class="Vendors-filtration pull-left">
                        <span class="icon-Res icon-Res-people  img-circle"></span>
                        people
                    </div>

                    <div class="Vendors-filtration pull-left">
                        <span class="icon-Res icon-Res-vendors img-circle"></span>
                        Vendors
                    </div>
                    <div class="products-filtration pull-left">
                        <span class="icon-Res icon-Res-products img-circle"></span>
                        Products
                    </div>
                    <div class="tips-filtration pull-left active-filtration">
                        <span class="icon-Res icon-Res-tips img-circle"></span>
                        Tips
                    </div>
                    <div class="experince-filtration pull-left">
                        <span class="icon-Res icon-Res-Exp img-circle"></span>
                        Experince
                    </div>

                </div><!----------------End  Filtration -------------->


            </div> <!----------------End  Search Results -------------->

            <div class="row">
                {% for result in results %}
                    {% for product in result.products %}
                    <div class="col-md-4 col-xs-6">
                        <div class="thumbnail">
                            <a href="{{ url("zgh_fe.products.content", {"id": result.id, "product_id": product.id }) }}"><img src="{{ product.getThumbWebPath ? asset(product.getThumbWebPath) : asset("bundles/zghfe/img/thumb.jpg") }}" class="img-responsive" alt="Responsive image"></a>

                            <div class="caption">
                                <h4>{{ product.name }}</h4>

                                <p>{{ product.description }}</p>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                {% endfor %}
            </div>
            </div>
            {% endblock leftContent %}

        {% block rightContent %}{% endblock rightContent %}

    </div>
{% endblock content %}

{% block javascripts %}
    {{ parent() }}

{% endblock javascripts %}