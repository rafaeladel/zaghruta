{% extends "@ZghFE/layout.html.twig" %}
{% block stylesheets %}
    {{ parent() }}
{% endblock stylesheets %}
{% block content %}

    <div class="container">
        {% block leftContent %}
            <div class="row">

                <div class="col-md-12 test">
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th colspan="2"><h2>Notifications</h2></th>
                            
                        </tr>
                        </thead>
                        <tbody>
                        {% for notification in notifications %}
                            {% if notification.content.type == 'notify.like' %}
                                <tr>
                                    <td>{{ notification.content.user }} Liked your
                                        {% if notification.content.obj_type == 0 %}
                                            <a href="{{ url("zgh_fe.post.display", {"id": notification.user.id, "post_id": notification.content.obj_id }) }}"> post</a>
                                        {% elseif notification.content.obj_type == 1 %}
                                            <a href="{{ url("zgh_fe.photos.photo.content", {"id": notification.user.id, "photo_id": notification.content.obj_id}) }}"> photo</a>
                                        {% elseif notification.content.obj_type == 2 %}
                                            <a href="{{ url("zgh_fe.experience.content", {"id": notification.user.id, "exp_id": notification.content.obj_id}) }}"> experience</a>
                                        {% elseif notification.content.obj_type == 3 %}
                                            <a href="{{ url("zgh_fe.tip.content", {"id": notification.user.id, "tip_id": notification.content.obj_id}) }}"> tip</a>
                                        {% elseif notification.content.obj_type == 4 %}
                                            <a href="{{ url("zgh_fe.products.content", {"id": notification.user.id, "product_id": notification.content.obj_id}) }}"> product</a>
                                        {% endif %}
                                        <span>at {{ notification.createdAt|date() }}</span>
                                    </td>
                                    <td><span class="glyphicon glyphicon-thumbs-up pull-right"></span></td>
                                </tr>
                            {% elseif notification.content.type == 'notify.comment' %}
                                <tr>
                                    <td>{{ notification.content.user }} Commented on your
                                        {% if notification.content.obj_type == 0 %}
                                            <a href="{{ url("zgh_fe.post.display", {"id": notification.user.id, "post_id": notification.content.obj_id }) }}"> post</a>
                                        {% elseif notification.content.obj_type == 1 %}
                                            <a href="{{ url("zgh_fe.photos.photo.content", {"id": notification.user.id, "photo_id": notification.content.obj_id}) }}"> photo</a>
                                        {% elseif notification.content.obj_type == 2 %}
                                            <a href="{{ url("zgh_fe.experience.content", {"id": notification.user.id, "exp_id": notification.content.obj_id}) }}"> experience</a>
                                        {% elseif notification.content.obj_type == 3 %}
                                            <a href="{{ url("zgh_fe.tip.content", {"id": notification.user.id, "tip_id": notification.content.obj_id}) }}"> tip</a>
                                        {% elseif notification.content.obj_type == 4 %}
                                            <a href="{{ url("zgh_fe.products.content", {"id": notification.user.id, "product_id": notification.content.obj_id}) }}"> product</a>
                                        {% endif %}
                                        <span>at {{ notification.createdAt|date() }}</span>

                                    </td>
                                    <td><span class="glyphicon glyphicon-comment pull-right"></span></td>
                                </tr>
                            {% elseif notification.content.type == 'notify.follow' %}
                                <tr>
                                    <td>
                                        <a href="{{ url("zgh_fe.user_profile.index", {"id": notification.content.follower_id }) }}"> {{ notification.content.user }} </a>Add
                                        you as a friend
                                        <span>at {{ notification.createdAt|date() }}</span>

                                    </td>
                                    <td><span class="glyphicon glyphicon-user pull-right"></span></td>
                                </tr>
                            {% elseif notification.content.type == 'notify.follow_request' %}
                                <tr>
                                    <td>
                                        <a href="{{ url("zgh_fe.user_profile.index", {"id": notification.content.follower_id }) }}"> {{ notification.content.user }} </a>
                                        Wants to add you as a friend. <a
                                                href="{{ url("zgh_fe.user.accept_follow", {"id": notification.actionId, "n_id": notification.id }) }}">Yes</a>
                                        <a href="{{ url("zgh_fe.user.deny_follow", {"id": notification.actionId, "n_id": notification.id }) }}">No</a>
                                        <span>at {{ notification.createdAt|date() }}</span>
                                    </td>
                                    <td><span class="glyphicon glyphicon-user pull-right"></span></td>
                                </tr>
                            {% elseif notification.content.type == 'notify.relationship.request' %}
                                <tr>
                                    <td>
                                        <a href="{{ url("zgh_fe.user_profile.index", {"id": notification.content.requester_id }) }}"> {{ notification.content.user }} </a>
                                        Wants to add you in {{ notification.content.requester_gender == 0 ? "his" : "her" }}
                                        relationship info.
                                        <a href="{{ url("zgh_fe.about.accept_relationship", {"id": notification.actionId, "n_id": notification.id }) }}">Yes</a>
                                        <a href="{{ url("zgh_fe.about.deny_relationship", {"id": notification.actionId, "n_id": notification.id }) }}">No</a>
                                        <span>at {{ notification.createdAt|date() }}</span>
                                    </td>
                                    <td><span class="glyphicon glyphicon-user pull-right"></span></td>
                                </tr>
                            {% endif %}
                        {% endfor %}

                        </tbody>
                    </table>
                </div>


            </div>
        {% endblock leftContent %}

        {% block rightContent %}{% endblock rightContent %}

    </div>
{% endblock content %}

{% block javascripts %}
    {{ parent() }}

{% endblock javascripts %}