{% trans_default_domain 'FOSUserBundle' %}

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
        "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>

    {% autoescape false %}
    <title>{% block subject %}Zaghruta - Email change confirmation{% endblock subject %}</title>
    {% endautoescape %}


    <style>
        .container, .header {
           margin: 0 auto;
            padding: 0 10px 10px;
        }
        a{
            display: inline-block;
            font-family: arial;
        }

        .content-one {
            padding-top: 30px !important;
        }
    </style>
</head>

<body>
{% block body_text %}{% endblock body_text %}
{% block body_html %}
    <center>
        <table width="550" style="border:2px solid #ccc; padding:50px;">
          <tbody>
            <tr>
                <td>
                  <table cellspacing="0" cellpadding="0" border="0" class="header">
                        <tbody>
                        <tr>
                            <td valign="top" align="center">
                                <a href="#" alt="Zaghrota"><img src="http://zaghruta.com/beta/zaghruta/web/email_icon/logo.png"/></a>
                            </td>
                         </tr>
                         </tbody>
                  </table>
                </td>
              </tr>
              <tr>
                <td>
                  <table cellspacing="0" cellpadding="0" border="0" class="content-one container">
                    <tbody>
                    <tr>
                        <td style="font-size:18px; color:#6e6e6e; font-family:Arial, Helvetica, sans-serif; padding-bottom:10px;"
                            align="left">Hi {{ user.fullname }},
                        </td>
                    </tr>
                    {% autoescape false %}
                    <tr>
                        <td style="font-size:14px; color:#6e6e6e; font-family:Arial, Helvetica, sans-serif; padding-bottom:30px; padding-top:10px;" align="left">{{ email_body }}</td>
                    </tr>
                    <tr>
                        <td style="font-size:18px; color:#61c5b6; font-family:Arial, Helvetica, sans-serif; padding-bottom:30px; padding-top:10px;"
                            align="left">

                            <a style="background:#61c5b6; width:357px; height:20px; line-height:20px; text-align:center; border-radius:10px; color:#fff; padding:20px 30px"
                               href="{{ conf_email }}">Click here to change your email</a>
                        </td>
                    </tr>
                    {% endautoescape %}

                    <tr>
                        <td style="" align="left" style="padding-bottom:30px;">
                             If you need help, contact us at
                            <a style="color:#e982a1; font-size:16px; font-family:Arial, Helvetica, sans-serif; text-decoration:none;"
                               href="mailto:feedback@zaghruta.com">feedback@zaghruta.com</a>
                        </td>
                    </tr>
                    <tr>
                        <td style="color:#6e6e6e; font-family:Arial, Helvetica, sans-serif; font-size:12px; padding-top:20px; font-style:italic;"
                            align="left">
                            <!--<strong style=" font-size:16px; font-style:normal">Have fun with zaghruta!</strong><br/>-->
                            - Zaghruta Team.
                        </td>
                    </tr>
                    <tr>
                        <td align="center" style="padding-top:20px; padding-bottom:20px;">
                            <a href="#"><img src="http://zaghruta.com/beta/zaghruta/web/email_icon/icon-facebook.png"/></a>
                        </td>
                    </tr>
                    </tbody>
                  </table>
                </td>
              </tr>
          </tbody>
        </table>
    </center>
{% endblock body_html %}
</body>
</html>
