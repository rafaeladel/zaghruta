{% extends "@ZghFE/layout.html.twig" %}
{% block stylesheets %}
    {{ parent() }}
{% endblock stylesheets %}
{% block content %}

    <div class="container">
        {% block leftContent %}
            <div class="row">

                <div class="col-md-3 hidden-xs hidden-sm">
                    <div class="companyData">
                        <img src="{{ asset(product.user.profilePhoto.getThumbWebPath()) }}">

                        <h2 class="text-center">{{ product.user.firstname }}</h2>

                        <p class="text-center">Company<br>
                            {% for interest in product.user.interests %}
                                {{ interest }}<br/>
                            {% endfor %}
                        </p>
                        {{ renderFollow(product.user) }}
                        <div class="groupItem">
                            <a href="#" class="boy"> <span
                                        class="glyphicon glyphicon-user glyphicon-user-boy"></span> {{ product.user.followers|length }}
                            </a>
                            {% if user.id != app.user.id %}
                                <button class="btn btn-primary pull-right btn-sm" data-toggle="modal"
                                        data-target="#msgModal"  type="button">
                                    <span class="glyphicon glyphicon-envelope"></span>
                                </button>
                                {{ message_user_popup("msgModal") }}
                            {% endif %}
                        </div>
                        <div class="clearfix"></div>
                    </div>
                </div>
                {{ include("@ZghFE/Partial/products/product_content_widget.html.twig", {"product": product }) }}
            </div>
        {% endblock leftContent %}

        {% block rightContent %}{% endblock rightContent %}

    </div>
{% endblock content %}

{% block javascripts %}
    {{ parent() }}
    <script>
        //        $(window).unload(function(e){
        //            alert("unloaded");
        //        })
    </script>
{% endblock javascripts %}
