{% extends "@ZghFE/layout_security.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}

{% block content %}
    <div class="mainContent">
        <div>
            <div class="loginBG img-responsive visible-lg"></div>
            <div class="iconGroup img-responsive visible-lg">
                <div style="position: relative">
                    <a href="#" class="sprite-iconPlug"></a>
                    <a href="#" class="sprite-iconChair"></a>
                    <a href="#" class="sprite-iconCalendar"></a>
                    <a href="#" class="sprite-iconHome"></a>
                    <a href="#" class="sprite-iconGirl"></a>
                    <a href="#" class="sprite-iconAccessories"></a>
                    <a href="#" class="sprite-iconFashion"></a>
                    <a href="#" class="sprite-iconPhotographers"></a>
                    <a href="#" class="sprite-iconHotels"></a>
                    <a href="#" class="sprite-iconBouquet"></a>
                    <a href="#" class="sprite-iconCar"></a>
                    <a href="#" class="sprite-iconHoneymoon"></a>
                    <a href="#" class="sprite-iconCakes"></a>
                    <a href="#" class="sprite-iconMusic"></a>
                </div>
            </div>
        </div>
        {% block innerContent %}
            <div class="BGlogin img-responsive visible-lg" style="display: none !important;"></div>
            <section class="container">
                <div class="control-group">&nbsp;</div>
                <div class="row">
                    <div class="signBox  col-md-6">

                        <ul class="nav nav-tabs nav-login" id="loginTabs">
                            <li class="active"><a href="">Last Step</a></li>
                        </ul>
                        <div class="tab-content">
                            <div id="register_user" class="tab-pane active">
                                {{ form_start(form, {"action": url("zgh_fe.user_profile.user_post_intro_edit", {"id": app.user.id}), "attr": {"novalidate": "novalidate"} }) }}
                                <div class="form-group">
                                    {{ form_label(form.name.firstname, "First Name") }}
                                    {{ form_widget(form.name.firstname, {"attr": {"class": "form-control", "placeholder": "First Name"} }) }}
                                    <div class="validation" style="">{{ form_errors(form.name.firstname) }}</div>
                                </div>
                                <div class="form-group">
                                    {{ form_label(form.name.lastname, "Last Name") }}
                                    {{ form_widget(form.name.lastname, {"attr": {"class": "form-control", "placeholder": "Last name"} }) }}
                                    <div class="validation" style="">{{ form_errors(form.name.lastname) }}</div>
                                </div>
                                <div class="form-group">
                                    {{ form_label(form.info.birthday) }}
                                    {{ form_widget(form.info.birthday, {"attr": {"class": "form_birthday"} }) }}
                                    <div class="validation" style="">{{ form_errors(form.info.birthday) }}</div>
                                </div>
                                <div class="form-group ">
                                    {{ form_label(form.info.gender) }}
                                    {{ form_widget(form.info.gender, {"attr": {"class": "form_gender"} }) }}
                                    <div class="validation" style="">{{ form_errors(form.info.gender) }}</div>

                                </div>
                                <div class="row">
                                    <input type="submit" name="submit" class="btn btn-danger btn-wide pull-right" value="Submit" />
                                </div>
                                {{ form_rest(form) }}
                                {{ form_end(form) }}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="clearfix"></div>
            </section>
        {% endblock innerContent %}

    </div>

{% endblock content %}
