{% extends "@ZghFE/layout.html.twig" %}
{% block stylesheets %}
    {{ parent() }}
{% endblock stylesheets %}
{% block content %}

    <div class="container">
        {% block leftContent %}
            <div class="row experience">
                <div class="col-md-9 tipExp">
                    <div class="row banner margin">
                        <div class="col-md-12">
                            <img src="{{ experience.getThumbWebPath ? asset(experience.getThumbWebPath) : asset("bundles/zghfe/img/avatar_wide.jpg") }}"
                                 class="img-responsive">
                        </div>
                    </div>

                    <div class="content_wrapper">
                        {% block innerPartial %}
                        <div class="row headerProduct">
                            <div class="col-md-2 pull-right icons-G">
                                <form class="pull-right" action="{{ url("zgh_fe.like.post", {"id": experience.id, "entity_type": experience.getObjectType }) }}"
                                      method="post">
                                    <button type="submit"
                                            class="btn btn-danger likeBtn btn-circle {{ checkLike(app.user, experience) ? "liked" : "" }}">
                                        <span class="glyphicon glyphicon-heart"></span>
                                    </button>
                                </form>

                                <a class="pull-right moveEditExpTip "
                                   href="{{ url("zgh_fe.experiences.get_edit", {"id": experience.user.id, "exp_id": experience.id}) }}"><i class="glyphicon glyphicon-edit"></i> Edit</a>
                            </div>
                            <h2 class="col-md-4">{{ experience.title }}</h2>

                            <div class="clearfix"></div>
                            <p class="by col-md-12">Category:
                                <span>{{ experience.category.name }}</span>
                            </p>
                            <span class="col-md-12 date-time">{{ experience.createdAt|date() }}</span>

                            <p class="by col-md-12">By: <a href="{{ url("zgh_fe.user_profile.index", {"id": experience.user.id}) }}"> {{ experience.user.getFullname }}</a></p>

                        </div>
                        <div class="row">
                            <p class="col-md-12">
                                {{ experience.content }}
                            </p>

                        </div>

                        {{ include("@ZghFE/Partial/common/comments_section.html.twig", { 'entity': experience }) }}
                        {% endblock innerPartial %}
                    </div>
                </div>

            </div>
        {% endblock leftContent %}

        {% block rightContent %}{% endblock rightContent %}

    </div>
{% endblock content %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(window).unload(function (e) {
            alert("unloaded");
        })
    </script>
{% endblock javascripts %}