<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="zgh_fe.tip.list" pattern="/{id}/tips/list">
        <default key="_controller">ZghFEBundle:Tip:getList</default>
    </route>

    <route id="zgh_fe.tip.content" pattern="/{id}/tip/{tip_id}">
        <default key="_controller">ZghFEBundle:Tip:getContent</default>
    </route>


    <route id="zgh_fe.tip.single_content" pattern="/{id}/tip/{tip_id}/single">
        <default key="_controller">ZghFEBundle:Tip:getSingleContent</default>
    </route>


    <route id="zgh_fe.tips.get_edit" pattern="/{id}/tip/{tip_id}/edit" methods="GET">
        <default key="_controller">ZghFEBundle:Tip:getEdit</default>
    </route>

    <route id="zgh_fe.tips.post_edit" pattern="/{id}/tip/{tip_id}/edit" methods="POST">
        <default key="_controller">ZghFEBundle:Tip:postEdit</default>
    </route>


    <route id="zgh_fe.tip.delete" pattern="/{id}/tip/{tip_id}/delete">
        <default key="_controller">ZghFEBundle:Tip:delete</default>
    </route>


    <route id="zgh_fe.tip.post_new" pattern="/{id}/tips/new" methods="POST">
        <default key="_controller">ZghFEBundle:Tip:postNew</default>
    </route>

    <route id="zgh_fe.tip.add" pattern="/{id}/tips/add">
        <default key="_controller">ZghFEBundle:Tip:getAddContent</default>
    </route>


</routes>
