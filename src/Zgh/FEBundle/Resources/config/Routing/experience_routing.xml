<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="zgh_fe.experience.list" pattern="/{id}/experiences/list">
        <default key="_controller">ZghFEBundle:Experience:getList</default>
    </route>

    <route id="zgh_fe.experience.content" pattern="/{id}/experience/{exp_id}">
        <default key="_controller">ZghFEBundle:Experience:getContent</default>
    </route>

    <route id="zgh_fe.experience.delete" pattern="/{id}/experience/{exp_id}/delete">
        <default key="_controller">ZghFEBundle:Experience:delete</default>
    </route>


    <route id="zgh_fe.experience.post_new" pattern="/{id}/experiences/new" methods="POST">
        <default key="_controller">ZghFEBundle:Experience:postNew</default>
    </route>

    <route id="zgh_fe.experience.add" pattern="/{id}/experiences/add">
        <default key="_controller">ZghFEBundle:Experience:getAddContent</default>
    </route>



</routes>
