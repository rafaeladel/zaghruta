<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="zgh_fe.settings.getSettings" pattern="/settings" methods="get">
        <default key="_controller">ZghFEBundle:Settings:getSettings</default>
    </route>

    <route id="zgh_fe.settings.postBasicInfo" pattern="/settings" methods="post">
        <default key="_controller">ZghFEBundle:Settings:postBasicInfo</default>
    </route>

</routes>
