{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path('fos_user_resetting_reset', {'token': token}) }}" {{ form_enctype(form) }} method="POST" class="fos_user_resetting_reset">

    <div class="form-group">
        {{ form_widget(form.plainPassword.first, {"attr": {"class": "form-control", "placeholder": "New Password"} }) }}
        <div class="validation" style="">{{ form_errors(form.plainPassword.first) }}</div>
    </div>
    <div class="form-group">
        {{ form_widget(form.plainPassword.second, {"attr": {"class": "form-control", "placeholder": "Verification"} }) }}
        <div class="validation" style="">{{ form_errors(form.plainPassword.second) }}</div>
    </div>
    <div class="row">
        <a href="{{ url("fos_user_security_login") }}">Back</a>

        <input type="submit" class="btn btn-danger btn-wide pull-right"  value="{{ 'resetting.reset.submit'|trans }}" />
    </div>
    {{ form_rest(form) }}

</form>
