{% extends app.request.xmlHttpRequest ? '@ZghFE/Default/ajax_layout.html.twig':'@ZghFE/Default/user_index.html.twig' %}

{% block leftContent %}
    <div id="vendTips" class="tips_Experience">
        <div class="row">
            <div class="col-xs-12 search-Results">
                {% if user.id == app.user.id %}
                    <a class="btn btn-primary     btn-wide moveExpTip" href="{{ url("zgh_fe.experience.add", {"id": user.id}) }}">
                        <span class="glyphicon glyphicon-plus"></span> Add your Experince
                    </a>
                {% endif %}

            </div>

        </div>

        <div class="row exp_wrapper">
            {{ render_esi(controller("ZghFEBundle:Experience:getList", {"id": user.id})) }}
        </div>

    </div>



{% endblock leftContent %}
