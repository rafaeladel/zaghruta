<div class="col-md-2 col-sm-3  note-box">
    <a href="{{ url("fos_message_inbox") }}" type="button" class="btn btn-primary btn-circle counter tooltip" data-placement="bottom"
       data-toggle="tooltip" data-original-title="Message">
        <span class="glyphicon glyphicon-envelope"></span>
        {% if fos_message_nb_unread() != 0 %}
            <span class="notCounter img-circle text-center">{{ fos_message_nb_unread() }}</span>
        {% endif %}
    </a>

    <a href="{{ url("zgh_fe.notification.get_list") }}" type="button" class="btn btn-primary btn-circle counter tooltip" data-placement="bottom"
       data-toggle="tooltip" data-original-title="Notification">
        <span class="glyphicon glyphicon-globe"></span>
        {% if notifications_count() > 0 %}
            <span class="notCounter img-circle text-center">{{ notifications_count() }}</span>
        {% endif %}
    </a>
    <a href="{{ url("zgh_fe.user_profile.index", {"id": app.user.id }) }}" class="btn  btn-circle counter tooltip" data-placement="bottom"
       data-toggle="tooltip" data-original-title="Profile">
        <img src="{{ "ROLE_FACEBOOK" in app.user.roles ? 'https://graph.facebook.com/'~app.user.facebookId~'/picture' : asset(app.user.profilePhoto.getThumbWebPath()) }}"
             alt="" width="25" height="25" style="border-radius:50%;">
    </a>



    <div class="btn-group">
        <button type="button" class="btn btn-primary btn-circle  dropdown-toggle" data-toggle="dropdown">
            <span class="glyphicon glyphicon-cog"></span>
        </button>
        <ul class="dropdown-menu">
                 <li><a href="{{ url("zgh_fe.interest.get") }}"><span class="icon-interests"></span>{{ is_granted("ROLE_CUSTOMER") ? "Interests" : "Categories" }}</a></li>
                <li><a href="{{ url("zgh_fe.settings.getSettings") }}" ><span class="glyphicon glyphicon-cog"></span> Setting</a></li> 
                <li><a href="{{ url("fos_user_security_logout") }}"><span class="glyphicon glyphicon-log-out"></span> Logout</a></li>
        </ul>
    </div>


</div>
